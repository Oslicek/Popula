{
  "name": "popula",
  "version": "0.1.0",
  "private": true,
  "description": "Demographic modeling engine with geographic flavor",
  "repository": {
    "type": "git",
    "url": "https://github.com/Oslicek/Popula.git"
  },
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "lint": "pnpm run -r lint",
    "typecheck": "pnpm run -r typecheck",
    "clean": "pnpm run -r clean",
    "nats:start": "powershell -ExecutionPolicy Bypass -File ./infra/scripts/start-nats.ps1",
    "worker:dev": "cd worker && cargo run",
    "worker:build": "cd worker && cargo build --release"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
